# General Configuration
NODE_ENV=develop
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=e_nutrition_db
DB_TYPE=postgres
MAX_POOL_SIZE=10
MIN_POOL_SIZE=2

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h
SALT_ROUNDS=10

# S3 Bucket Configuration (Wasabi/S3 Compatible)
BUCKET_NAME=your-bucket-name
BUCKET_REGION=us-east-1
BUCKET_ACCESS_KEY_ID=your-access-key-id
BUCKET_SECRET_ACCESS_KEY=your-secret-access-key
BUCKET_ENDPOINT=https://s3.wasabisys.com
INTERNAL_BUCKET_NAME=your-internal-bucket-name

# Frontend Redirect Pages
USER_EMAIL_VERIFICATION_PAGE=https://your-frontend.com/verify-email
USER_RESET_PASSWORD_PAGE=https://your-frontend.com/reset-password
USER_SET_PASSWORD_PAGE=https://your-frontend.com/set-password

# User Configuration
DEFAULT_USER_NAME=Admin
DEFAULT_PASSWORD=TempPass123!

# File Size Limits
IMAGE_FILE_SIZE=5MB
VIDEO_FILE_SIZE=100MB
AUDIO_FILE_SIZE=50MB
IMAGE_FIELD_SIZE=10MB

# SendGrid Email Configuration
SEND_GRID_API_KEY=your-sendgrid-api-key-here

# Support Email Configuration
SUPPORT_SENDER_EMAIL=noreply@yourdomain.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=https://your-backend.com/auth/google/callback

# Social Media Configuration
SOCIAL_MEDIA_REDIRECT_URL=https://your-frontend.com/social-login

# Elasticsearch Configuration (Optional)
ELASTICSEARCH_NODE=https://your-elasticsearch-node:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password
ELASTICSEARCH_TLS_REJECT_UNAUTHORIZED=false

# Encryption Configuration
ENCRYPTION_IV=your-16-character-iv
ENCRYPTION_KEY=your-32-character-encryption-key

# Logout Routes (Optional)
ADMIN_LOGOUT_ROUTE=/admin/logout
USER_LOGOUT_ROUTE=/user/logout

# Additional Environment Variables (for backward compatibility)
JWT_ENCRYPTION_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_TOKEN_EXPIRY_TIME=86400
SALT_ROUND=10
BUCKET_NAME=your-bucket-name
WASABI_ACCESSS_KEY_ID=your-access-key-id
WASABI_SECRET_KEY=your-secret-access-key
SUPPORT_EMAIL=support@yourdomain.com
SECURITY_EMAIL=security@yourdomain.com
